# Environment variables for Item Bot deployment
# Copy this file to .env and fill in your values

# Company Bot Configuration
COMPANY_BOT_TOKEN=your-company-bot-token-here
COMPANY_ADMIN_1=123456789
COMPANY_ADMIN_2=987654321

# Dev Bot Configuration  
DEV_BOT_TOKEN=your-dev-bot-token-here
DEV_ADMIN_1=123456789
DEV_ADMIN_2=

# QA Bot Configuration
QA_BOT_TOKEN=your-qa-bot-token-here
QA_ADMIN_1=123456789
QA_ADMIN_2=

# Global Settings
LOG_LEVEL=INFO
COMPOSE_PROJECT_NAME=item-bot

# Optional: Docker registry settings (for private deployments)
# DOCKER_REGISTRY=registry.company.com
# DOCKER_USERNAME=username
# DOCKER_PASSWORD=password
